#!/bin/bash
# PornAOSP OTA

DEVICE=`grep ro.paosp.device $OUT/*/build.prop | cut -d'=' -f2`
DONATE=`grep ro.paosp.donate $OUT/*/build.prop | cut -d'=' -f2`
TYPE=`grep ro.paosp.type $OUT/*/build.prop | cut -d'=' -f2`
VERSION=`grep ro.paosp.version $OUT/*/build.prop | cut -d'=' -f2`

PAOSP_TARGET_PACKAGE=$VERSION-$DEVICE.zip

# Create OTA XML file
if [ -f $OTA_DIR/ota_conf ] &>/dev/null; then
if [ -z "$DONATE" ]; then

cat >$OUT/ota_$DEVICE.xml <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<PornOTA xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ota.xsd">
    <Pie>
        <$DEVICE>
            <Filename>$VERSION</Filename>
            <RomUrl
                id="rom"
                title=""
                description="">https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE</RomUrl>
            <MD5Url
                id="md5"
                title=""
                description="">https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE.md5sum</MD5Url>
            <OpenGappsUrl
                id="gapps"
                title=""
                description="">http://opengapps.org</OpenGappsUrl>
            <ChangelogUrl
                id="changelog"
                title=""
                description="">https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/Changelog.txt</ChangelogUrl>
        </$DEVICE>
    </Pie>
</PornOTA>
EOF

else

cat >$OUT/ota_$DEVICE.xml <<EOF
<?xml version="1.0" encoding="UTF-8"?>
<PornOTA xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ota.xsd">
    <Pie>
        <$DEVICE>
            <Filename>$VERSION</Filename>
            <RomUrl
                id="rom"
                title=""
                description="">https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE</RomUrl>
            <MD5Url
                id="md5"
                title=""
                description="">https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/$PAOSP_TARGET_PACKAGE.md5sum</MD5Url>
            <OpenGappsUrl
                id="gapps"
                title=""
                description="">http://opengapps.org</OpenGappsUrl>
            <ChangelogUrl
                id="changelog"
                title=""
                description="">https://mirrors.c0urier.net/android/teamhorizon/P/$TYPE/$DEVICE/Changelog.txt</ChangelogUrl>
            <DonateUrl
                id="donate"
                title=""
                description="">$DONATE</DonateUrl>
        </$DEVICE>
    </Pie>
</PornOTA>
EOF

fi
fi
